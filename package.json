{
  "name": "termin-api",
  "version": "1.0.0",
  "description": "Modern API testing tool for terminal using OpenTUI - Like Postman but in CLI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "termin-api": "./dist/index.js",
    "termin": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.tsx",
    "build": "tsc",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@opentui/core": "latest",
    "axios": "^1.6.5",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "gradient-string": "^2.0.2",
    "lowdb": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/gradient-string": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "keywords": [
    "api",
    "rest",
    "graphql",
    "postman",
    "cli",
    "tui",
    "terminal",
    "opentui",
    "http-client",
    "api-testing",
    "http",
    "request-builder"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/termin-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/termin-api/issues"
  },
  "homepage": "https://github.com/yourusername/termin-api#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
